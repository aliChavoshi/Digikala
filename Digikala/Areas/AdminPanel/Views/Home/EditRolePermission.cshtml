@using Digikala.Utility.Convertor
@model Digikala.DataAccessLayer.Entities.Identity.RolePermission
<form method="post" asp-action="EditRolePermission">
   <input type="hidden" asp-for="Id" />
   <input type="hidden" asp-for="RoleId" />
   <input type="hidden" asp-for="PermissionId" />
   <div class="modal-body">
      <div class="form-group">
         <label asp-for="RoleId"></label>
         <select required class="form-control" disabled="disabled" asp-items="@ViewData["Roles"] as SelectList"></select>
      </div>
      <div class="form-group">
         <label asp-for="PermissionId"></label>
         <select required class="form-control" disabled="disabled" asp-items="@ViewData["Permissions"] as SelectList"></select>
      </div>
      <div class="form-group">
         <label asp-for="ExpireRolePermission"></label>
         <input value="@Model.ExpireRolePermission?.ToShamsi()" name="expireDate" id="expireDate" readonly autocomplete="off" type="text" class="form-control" placeholder="تاریخ انقضا این دسترسی را مشخص نمائید" />
      </div>
   </div>
   <div class="modal-footer">
      <a href="#" class="btn btn-warning btn-shadow-hover font-weight-bold mr-2" data-dismiss="modal">بستن</a>
      <button type="submit" class="btn btn-success btn-shadow-hover font-weight-bold mr-2">ثبت</button>
   </div>
</form>
<script>
   $('#expireDate').persianDatepicker();
</script>