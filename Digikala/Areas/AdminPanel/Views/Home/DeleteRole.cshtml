@model Digikala.DataAccessLayer.Entities.Identity.Role
<form method="post" asp-action="DeleteRole">
     <input type="hidden" asp-for="Id" />
     <div class="modal-body">
          <div class="form-group">
               <label for="recipient-name" class="col-form-label">عنوان :</label>
               <input readonly="readonly" asp-for="Title" type="text" class="form-control" id="recipient-name">
               <span class="text-danger" asp-validation-for="Title"></span>
          </div>
     </div>
     <div class="modal-footer">
          <a href="#" class="btn btn-warning btn-shadow-hover font-weight-bold mr-2" data-dismiss="modal">بستن</a>
          <button type="submit" class="btn btn-danger btn-shadow-hover font-weight-bold mr-2">حذف</button>
     </div>
</form>