@using Digikala.Utility.Convertor
@model Digikala.DataAccessLayer.Entities.Identity.RolePermission
<form method="post" asp-action="DeleteRolePermission">
   <input type="hidden" asp-for="Id" />
   <div class="modal-body">
      <div class="form-group">
         <label asp-for="RoleId"></label>
         <select required class="form-control" disabled="disabled" asp-items="@ViewData["Roles"] as SelectList"></select>
      </div>
      <div class="form-group">
         <label asp-for="PermissionId"></label>
         <select required class="form-control" disabled="disabled" asp-items="@ViewData["Permissions"] as SelectList"></select>
      </div>
      @if (Model.ExpireRolePermission.HasValue)
      {
         <div class="form-group">
            <label asp-for="ExpireRolePermission"></label>
            <input disabled="disabled" value="@Model.ExpireRolePermission?.ToShamsi()" name="expireDate" id="expireDate" autocomplete="off" type="text" class="form-control" placeholder="تاریخ انقضا این دسترسی را مشخص نمائید" />
         </div>
      }
   </div>
   <div class="modal-footer">
      <a href="#" class="btn btn-warning btn-shadow-hover font-weight-bold mr-2" data-dismiss="modal">بستن</a>
      <button type="submit" class="btn btn-danger btn-shadow-hover font-weight-bold mr-2">حذف</button>
   </div>
</form>