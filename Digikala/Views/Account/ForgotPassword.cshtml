@model Digikala.DTOs.AccountDtos.ForgotPasswordDto

@{
    ViewBag.Title = "دریافت کد فعال سازی جدید";
    Layout = "_RegisterLayout";
}

<!-- Start mini-header -->
<partial name="Account/_PartialMiniHeader" />
<!-- End mini-header -->
<!-- Start main-content -->
<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="form-ui dt-sl dt-sn pt-4">
                    <div class="section-title title-wide mb-1 no-after-title-wide">
                        <h2 class="font-weight-bold">@ViewBag.Title</h2>
                    </div>
                    <div class="message-light">
                        شماره موبایل خود را جهت  دریافت کد فعال سازی جدید وارد نمائید.
                    </div>
                    <form method="post">
                        <div class="form-row-title">
                            <h3>شماره موبایل</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input required asp-for="Mobile" type="text" class="input-ui pr-2" placeholder="شماره موبایل خود را وارد نمائید">
                            <i class="mdi mdi-account-circle-outline"></i>
                            <span class="text-danger font-weight-bold" asp-validation-for="Mobile"></span>
                        </div>
                        
                        <div class="form-row mt-3">
                            <button type="submit" class="btn-primary-cm btn-with-icon mx-auto w-100">
                                <i class="mdi mdi-account-circle-outline"></i>
                                ارسال کد فعال سازی
                            </button>
                        </div>
                        <div class="form-footer text-right mt-3">
                            <span class="d-block font-weight-bold">قبلا ثبت نام کرده اید؟</span>
                            <a asp-action="Login" class="d-inline-block mr-3 mt-2">وارد شوید</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- End main-content -->
<!-- Start mini-footer -->
<partial name="Account/_PartialMiniFooter" />
<!-- End mini-footer -->
